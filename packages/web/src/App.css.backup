/* AWS-style corporate UI */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
  background: #f2f3f3;
  color: #16191f;
  line-height: 1.5;
}

.app {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.header {
  background: #232f3e;
  color: white;
  padding: 16px 24px;
  border-bottom: 2px solid #ff9900;
}

.header-content h1 {
  font-size: 20px;
  font-weight: 500;
  margin: 0;
}

.header-content p {
  font-size: 13px;
  color: #aab7b8;
  margin: 4px 0 0 0;
}

.container {
  display: flex;
  flex: 1;
  max-width: 1800px;
  margin: 0 auto;
  width: 100%;
}

.sidebar {
  width: 280px;
  background: white;
  border-right: 1px solid #d5dbdb;
  padding: 20px;
  overflow-y: auto;
}

.sidebar h2 {
  font-size: 14px;
  font-weight: 700;
  color: #16191f;
  margin-bottom: 16px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.category-list {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.category-item {
  background: none;
  border: 1px solid transparent;
  padding: 10px 12px;
  text-align: left;
  cursor: pointer;
  border-radius: 4px;
  transition: all 0.15s ease;
}

.category-item:hover {
  background: #f2f3f3;
  border-color: #d5dbdb;
}

.category-item.active {
  background: #e6f2ff;
  border-color: #0972d3;
}

.category-name {
  font-size: 13px;
  font-weight: 500;
  color: #16191f;
  margin-bottom: 2px;
}

.category-desc {
  font-size: 11px;
  color: #545b64;
}

.main-content {
  flex: 1;
  padding: 24px;
  overflow-y: auto;
}

.empty-state {
  text-align: center;
  padding: 80px 20px;
  color: #545b64;
  font-size: 14px;
}

.error-banner {
  background: #fef5e7;
  border: 1px solid #f9e79f;
  border-radius: 4px;
  padding: 12px 16px;
  margin-bottom: 20px;
  font-size: 13px;
}

.loading {
  text-align: center;
  padding: 40px;
  color: #545b64;
  font-size: 14px;
}

.category-header {
  margin-bottom: 24px;
}

.category-header h2 {
  font-size: 24px;
  font-weight: 400;
  color: #16191f;
  margin-bottom: 8px;
}

.metadata {
  font-size: 12px;
  color: #545b64;
  display: flex;
  align-items: center;
  gap: 8px;
}

.cache-badge,
.live-badge {
  padding: 2px 8px;
  border-radius: 3px;
  font-weight: 500;
}

.cache-badge {
  background: #f2f3f3;
  color: #545b64;
}

.live-badge {
  background: #e6f2ff;
  color: #0972d3;
}

.separator {
  color: #d5dbdb;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 16px;
  margin-bottom: 32px;
}

.stat-card {
  background: white;
  border: 1px solid #d5dbdb;
  border-radius: 4px;
  padding: 16px;
}

.stat-label {
  font-size: 12px;
  color: #545b64;
  font-weight: 500;
  margin-bottom: 8px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.stat-value {
  font-size: 22px;
  font-weight: 300;
  color: #16191f;
}

.table-wrapper {
  background: white;
  border: 1px solid #d5dbdb;
  border-radius: 4px;
}

.table-header {
  padding: 16px 20px;
  background: #fafafa;
  border-bottom: 1px solid #d5dbdb;
}

.table-container {
  overflow-x: auto;
}

.table-header h3 {
  font-size: 16px;
  font-weight: 500;
  color: #16191f;
  margin: 0 0 6px 0;
}

.algorithm-note {
  font-size: 11px;
  color: #545b64;
  margin: 0;
  font-style: italic;
}

.data-table {
  width: 100%;
  border-collapse: collapse;
  font-size: 13px;
}

.data-table thead {
  background: #fafafa;
  border-bottom: 2px solid #d5dbdb;
}

.data-table th {
  text-align: left;
  padding: 12px 16px;
  font-weight: 600;
  color: #16191f;
  font-size: 12px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.data-table th.sortable {
  cursor: pointer;
  user-select: none;
  transition: background 0.15s ease;
}

.data-table th.sortable:hover {
  background: #e6f2ff;
  color: #0972d3;
}

.data-table th:first-child {
  width: 60px;
  white-space: nowrap;
}

.data-table th:nth-child(6) {
  width: 140px;
  white-space: nowrap;
}

.data-table td {
  padding: 12px 16px;
  border-bottom: 1px solid #eaeded;
}

.data-table tbody tr:hover {
  background: #fafafa;
}

.product-link {
  color: #0972d3;
  text-decoration: none;
  font-family: 'Courier New', monospace;
  font-size: 12px;
}

.product-link:hover {
  text-decoration: underline;
}

.price-cell {
  white-space: nowrap;
}

.price {
  font-weight: 600;
  color: #16191f;
}

.discount {
  display: inline-flex;
  gap: 6px;
  margin-left: 8px;
  font-size: 11px;
}

.original-price {
  text-decoration: line-through;
  color: #879596;
}

.discount-badge {
  background: #d13212;
  color: white;
  padding: 1px 6px;
  border-radius: 3px;
  font-weight: 600;
}

.seller-cell {
  font-size: 12px;
}

.seller-meta {
  color: #545b64;
  font-size: 11px;
  margin-top: 2px;
}

.engagement-cell {
  font-size: 12px;
  color: #545b64;
}

.engagement-cell div {
  margin: 2px 0;
}

.muted {
  color: #aab7b8;
}

.badges-cell {
  display: flex;
  flex-wrap: wrap;
  gap: 4px;
  align-items: flex-start;
}

.badge {
  padding: 2px 8px;
  border-radius: 3px;
  font-size: 11px;
  font-weight: 500;
  white-space: nowrap;
}

.badge-toprated {
  background: #fff3cd;
  color: #856404;
}

.badge-promoted {
  background: #ffe6f0;
  color: #c41a65;
}

.badge-shipping {
  background: #d4edda;
  color: #155724;
}

.footer-note {
  margin-top: 20px;
  padding: 16px;
  background: #f2f3f3;
  border-radius: 4px;
  font-size: 12px;
  color: #545b64;
  text-align: center;
}

/* New column styles */
.image-cell {
  padding: 8px !important;
}

.images-container {
  display: flex;
  gap: 4px;
  align-items: flex-start;
}

.item-image {
  object-fit: cover;
  border-radius: 4px;
  border: 1px solid #d5dbdb;
}

.main-image {
  width: 64px;
  height: 64px;
}

.additional-images {
  display: flex;
  flex-direction: column;
  gap: 2px;
}

.additional-image {
  width: 40px;
  height: 40px;
}

.no-image {
  width: 64px;
  height: 64px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f2f3f3;
  border-radius: 4px;
  font-size: 10px;
  color: #879596;
  text-align: center;
}

.product-cell {
  min-width: 200px;
}

.product-title {
  font-weight: 500;
  color: #16191f;
  margin-bottom: 4px;
  font-size: 12px;
  line-height: 1.4;
}

.product-desc {
  font-size: 10px;
  color: #879596;
  margin-top: 4px;
  font-style: italic;
  line-height: 1.3;
}

.shipping-cell {
  font-size: 11px;
  min-width: 120px;
}

.ship-cost {
  font-weight: 600;
  color: #16191f;
  margin-bottom: 2px;
}

.ship-type {
  font-size: 10px;
  color: #545b64;
  text-transform: capitalize;
  margin-bottom: 2px;
}

.ship-regions {
  font-size: 10px;
  color: #879596;
  margin-top: 4px;
}

.returns-cell {
  font-size: 11px;
  min-width: 120px;
}

.returns-yes {
  color: #155724;
  font-weight: 500;
}

.returns-no {
  color: #721c24;
  font-size: 11px;
}

.returns-meta {
  color: #545b64;
  font-size: 10px;
  margin-top: 2px;
}

.stock-cell {
  font-size: 11px;
}

.stock-low {
  color: #d13212;
  font-weight: 600;
}

.location-cell {
  font-size: 11px;
  color: #545b64;
  min-width: 100px;
}

/* Mobile responsive styles */
@media (max-width: 768px) {
  .container {
    flex-direction: column;
  }

  .sidebar {
    width: 100%;
    border-right: none;
    border-bottom: 1px solid #d5dbdb;
    max-height: 200px;
  }

  .main-content {
    padding: 16px;
  }

  .category-header h2 {
    font-size: 20px;
  }

  .stats-grid {
    grid-template-columns: repeat(2, 1fr);
  }

  .stat-value {
    font-size: 18px;
  }

  .metadata {
    flex-wrap: wrap;
  }

  .data-table {
    font-size: 12px;
  }

  .data-table th,
  .data-table td {
    padding: 8px 10px;
  }

  .data-table th:first-child {
    width: 40px;
  }

  .data-table th:nth-child(6) {
    width: 120px;
  }
}

@media (max-width: 480px) {
  .header-content h1 {
    font-size: 18px;
  }

  .header-content p {
    font-size: 12px;
  }

  .stats-grid {
    grid-template-columns: 1fr;
  }

  .category-name {
    font-size: 12px;
  }

  .category-desc {
    font-size: 10px;
  }

  .data-table {
    font-size: 11px;
  }

  .data-table th,
  .data-table td {
    padding: 6px 8px;
  }
}
